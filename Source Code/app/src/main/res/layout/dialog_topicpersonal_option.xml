<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/style_round_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/textViewEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_edit"
            android:drawablePadding="30dp"
            android:text="Chỉnh Sửa"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_delete"
            android:drawablePadding="30dp"
            android:text="Xóa"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewAddIntoFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_add_into_folder"
            android:drawablePadding="30dp"
            android:text="Thêm vào Folder"
            android:textColor="@color/black"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewExportCSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_export"
        android:drawablePadding="30dp"
        android:text="Xuất danh sách từ ra CSV"
        android:textColor="@color/black"
        android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layoutPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit"
            android:orientation="horizontal"
            android:textColor="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_resource_public"
                android:drawablePadding="30dp"
                android:text="@string/publicVi"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchPublicMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp" />
        </LinearLayout>
    </LinearLayout>

