<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/style_round_dialog"
            android:paddingVertical="30dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:paddingHorizontal="5dp"
            >
            <TextView
                android:id="@+id/textViewAddFolder"
                android:layout_width="wrap_content"
                android:text="@string/option"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLearnAll"
                android:layout_marginVertical="20dp"
                android:text="Học toàn bộ"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center"
                android:background="@drawable/style_background_btn3"
                android:textColor="@color/blue_400"
                android:textSize="12sp"
                android:layout_width="184dp"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonLearnTicked"
                android:layout_width="184dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/style_background_btn3"
                android:fontFamily="@font/inter_bold"
                android:text="Học các từ đã đánh dấu"
                android:textColor="@color/blue_400"
                android:textSize="12sp" />
        </LinearLayout>
