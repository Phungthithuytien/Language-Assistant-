<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow -->
    <item>
        <shape>
            <solid android:color="@color/blue_400" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- Border with padding to make space for the shadow -->
    <item android:right="2dp" android:bottom="5dp" android:left="2dp"  android:top="1dp">
        <shape>
            <solid android:color="#D5FFFFFF" />
            <corners android:radius="5dp" />
            <stroke android:color="@color/blue_400" android:width="1dp"/> <!-- Border color and width -->
        </shape>
    </item>
</layer-list>
